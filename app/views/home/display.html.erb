<html>
  <head>
    <base target="_top">
    <style>
      * {
        margin: 0;
        padding: 0;
        overflow: hidden;
        height: 100vh;
      }
      iframe {
        border: none;
        width: 100%;
        height: 100%;
      }
    </style>
  </head>
  <body>
    <!-- 表示用 iframe -->
    <iframe id="content" src='/temp/default.pdf'></iframe>
    <script>
      let isDownloaded = false; // ファイルがダウンロードされたかどうかを示すフラグ

      window.onload = function() {
        // iframe要素を取得
        let contentFrame = document.getElementById("content");
        
        // 初期表示は/temp/default.pdf
        contentFrame.src = "/temp/default.pdf";
      };

      // ファイルの存在を確認
      function checkFileExists() {
        fetch("/check_file_exists")
        .then(response => response.json())
        .then(data => {
          if (data.message === 'File exists') {
            console.log("download.pdfは存在します");
            let contentFrame = document.getElementById("content");
            contentFrame.src = "/temp/download.pdf";
            isDownloaded = true; // フラグを更新
          } else {
            console.log("download.pdfは存在しません");
          }
        })
        .catch(error => {
          console.log("エラーが発生しました:", error);
        });
      }

      // ファイルがダウンロードされた（isDownloaded = true）後に、一度だけ削除処理を呼び出す
      function tryDeleteFile() {
        if (isDownloaded) {
          fetch('/delete_pdf', {
            method: 'DELETE'
          })
          .then(() => {
            console.log("delete_pdf成功");
          })
          .catch(() => {
            console.log("delete_pdf失敗");
          });
          isDownloaded = false; // フラグをリセット
        }
      }

      // 15秒ごとにcheckFileExistsを呼び出す
      setInterval(checkFileExists, 15000);

      // 5秒ごとにtryDeleteFileを呼び出す
      setInterval(tryDeleteFile, 5000);
    </script>
  </body>
</html>