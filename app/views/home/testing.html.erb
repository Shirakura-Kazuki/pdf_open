      head :ok
    rescue => e
      render json: { error: "Pusherでエラーが発生しました: #{e.message}" }, status: :internal_server_error
    end
  else
    render json: { error: "外部スクリプトの実行に失敗しました" }, status: :internal_server_error
  end
end
